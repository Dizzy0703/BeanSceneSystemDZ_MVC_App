@model Event

<h1>Event</h1>
<form method="post" enctype="multipart/form-data" asp-action="Create">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h1 class="text-primary">Create Event</h1>
        </div>
        <div class="mb-2">
           @* <div asp-validation-summary="All" class="text-danger"></div>*@
            <label>Description</label>
            <input asp-for="Description" class="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="mb3">x
            <label>StartDate</label>
            <input asp-for="StartDate" class="form-control"/>
            <span asp-validation-for="StartDate" class="text-danger"></span>
        </div>
        <div class="mb3">
            <label>Duration</label>
            <input asp-for="Duration" class="form-control" />
            <span asp-validation-for="Duration" class="text-danger"></span>
        </div>
        <div class="mb3">
            <label>User ID</label>
            <input asp-for="UserId" class="form-control" />
            <span asp-validation-for="UserId" class="text-danger"></span>
        </div>
        <div class="mb3">
            <label>Reservation ID</label>
            <input asp-for="ReservationId" class="form-control" />
            <span asp-validation-for="ReservationId" class="text-danger"></span>
        </div>
        <br/>
        <br/>
        <br/>
        <button type="submit" class="btn btn-primary">Create</button>
        <a asp-controller="Event" asp-action="Index" class="btn btn-primary">Back To List</a>
    </div>
</form>
