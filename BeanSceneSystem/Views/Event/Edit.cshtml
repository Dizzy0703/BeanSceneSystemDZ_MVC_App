@model Event
<h1>Event</h1>
<form asp-action="Edit" enctype="multipart/form-data" method="post">
    <input asp-for="Id" hidden/>
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h1 class="text-primary">Edit Event</h1>
        </div>
        <div class="mb-2">
            <label>Description</label>
            <input asp-for="Description" class="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="mb3">x
            <label>StartDate</label>
            <input asp-for="StartDate" class="form-control"/>
            <span asp-validation-for="StartDate" class="text-danger"></span>
        </div>
        <div class="mb3">x
            <label>Duration</label>
            <input asp-for="Duration" class="form-control"/>
            <span asp-validation-for="Duration" class="text-danger"></span>
        </div>
        <div class="mb3">
            <label>User ID</label>
            <input asp-for="UserId" class="form-control" />
            <span asp-validation-for="UserId" class="text-danger"></span>
        </div>
        <div class="mb3">
            <label>Reservation ID</label>
            <input asp-for="ReservationId" class="form-control" />
            <span asp-validation-for="ReservationId" class="text-danger"></span>
        </div>
        <br />

        <button type="submit" class="btn btn-primary">Update</button>
        <a asp-controller="Event" asp-action="Index" class="btn btn-primary">Back To List</a>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationscriptsPartial" />
    }
}