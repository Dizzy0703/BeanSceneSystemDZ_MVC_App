<form method="post" asp-action="Delete">

    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h1 class="text-primary">Delete Reservation</h1>
        </div>
        <div class="mb-2">
            <label>Id</label>
            <input asp-for="Id" disabled class="form-control" />
        </div>
        <div class="mb3">x
            <label>User ID</label>
            <input asp-for="UserId" disabled class="form-control"/>
        </div>
        <div class="mb3">x
            <label>Sitting</label>
            <input asp-for="Sitting" disabled class="form-control"/>
        </div>
        <div class="mb3">x
            <label>Area</label>
            <input asp-for="Area" disabled class="form-control"/>
        </div>
        <div class="mb3">x
            <label>Start Date</label>
            <input asp-for="StartDate" disabled class="form-control"/>
        </div>
        <div class="mb3">x
            <label>Table Number</label>
            <input asp-for="TableNo" disabled class="form-control"/>
        </div>
        <div class="mb3">x
            <label>Duration</label>
            <input asp-for="Duration" disabled class="form-control"/>
        </div>
        <div class="mb3">x
            <label>Source</label>
            <input asp-for="Source" disabled class="form-control"/>
        </div>
        <div class="mb3">x
            <label>Notes</label>
            <input asp-for="Notes" disabled class="form-control"/>
        </div>
        <br />
        <button type="submit" class="btn btn-primary">Delete</button>
        <a asp-controller="Reservation" asp-action="Index" class="btn btn-primary">Back To List</a>
    </div>
</form>

