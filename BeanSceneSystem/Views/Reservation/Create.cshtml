@model Reservation

<h1>Reservation</h1>
<form method="post" enctype="multipart/form-data" asp-action="Create">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h1 class="text-primary">Create Reservation</h1>
        </div>
        <div class="mb-2">
           @* <div asp-validation-summary="All" class="text-danger"></div>*@
            <label>User ID</label>
            <input asp-for="UserId" class="form-control" />
            <span asp-validation-for="UserId" class="text-danger"></span>
        </div>
        <div class="mb3">x
            <label>Sitting</label>
            <input asp-for="Sitting" class="form-control"/>
            <span asp-validation-for="Sitting" class="text-danger"></span>
        </div>
        <div class="mb3">
            <label>Area</label>
            <input asp-for="Area" class="form-control" />
            <span asp-validation-for="Area" class="text-danger"></span>
        </div>
        <div class="mb3">
            <label>Start Date</label>
            <input asp-for="StartDate" class="form-control" />
            <span asp-validation-for="StartDate" class="text-danger"></span>
        </div>
        <div class="mb3">
            <label>Table Number</label>
            <input asp-for="TableNo" class="form-control" />
            <span asp-validation-for="TableNo" class="text-danger"></span>
        </div>
        <div class="mb3">
            <label>Duration</label>
            <input asp-for="Duration" class="form-control" />
            <span asp-validation-for="Duration" class="text-danger"></span>
        </div>
        <div class="mb3">
            <label>Source</label>
            <input asp-for="Source" class="form-control" />
            <span asp-validation-for="Source" class="text-danger"></span>
        </div>
        <div class="mb3">
            <label>Notes</label>
            <input asp-for="Notes" class="form-control" />
            <span asp-validation-for="Notes" class="text-danger"></span>
        </div>
        <br/>
        <br/>
        <br/>
        <button type="submit" class="btn btn-primary">Create</button>
        <a asp-controller="Reservation" asp-action="Index" class="btn btn-primary">Back To List</a>
    </div>
</form>
